<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="CreatIFPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>modele.Artiste</class>
    <class>modele.Client</class>
    <class>modele.Oeuvre</class>
    <class>modele.Peinture</class>
    <class>modele.Sculpture</class>
    <class>modele.Galerie</class>
    <properties>
      <property name="toplink.jdbc.user" value="user"/>
      <property name="toplink.jdbc.password" value="pass"/>
      <property name="toplink.jdbc.url" value="jdbc:derby://localhost:1527/BD_CreatIF"/>
      <property name="toplink.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="toplink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
